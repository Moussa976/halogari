{% extends 'base.html.twig' %}

{% block title %}Mes conversations{% endblock %}

{% block body %}
<div class="container py-5">
    <h2 class="mb-4">Mes conversations</h2>

    {% if conversations is empty %}
        <p class="text-muted">Vous n'avez encore aucune conversation.</p>
    {% else %}
        <div class="list-group">
            {% for conv in conversations %}
                <a href="{{ path('app_conversation', { id: conv.user.id }) }}" class="list-group-item list-group-item-action">
                    <div class="d-flex justify-content-between">
                        <strong>{{ conv.user.prenom }} {{ conv.user.nom }}</strong>
                        <small class="small-sm">{{ conv.lastMessage.createdAt|date_conversation }}</small>
                    </div>
                    <div class="text-muted">{{ conv.lastMessage.contenu|slice(0, 50) ~ '...' }}</div>
                </a>
            {% endfor %}
        </div>
    {% endif %}
</div>
{% endblock %}
