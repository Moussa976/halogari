{% block javascripts %}
<script src="https://js.stripe.com/v3/"></script>
<script>
  // ğŸ” Initialisation Stripe avec ta clÃ© publique
  const stripe = Stripe('{{ stripePublicKey }}');
  const elements = stripe.elements();
  const card = elements.create('card');
  card.mount('#card-element');

  const form = document.getElementById('payment-form');
  const resultDiv = document.getElementById('payment-result');

  form.addEventListener('submit', async (e) => {
    e.preventDefault();
    resultDiv.innerHTML = ''; // ğŸ” RÃ©initialise les messages

    // ğŸ”„ Lancement du paiement via Stripe
    const { error, paymentIntent } = await stripe.confirmCardPayment('{{ clientSecret }}', {
      payment_method: {
        card: card,
        billing_details: {
          name: '{{ reservation.passager.nom ~ ' ' ~ reservation.passager.prenom }}',
          email: '{{ reservation.passager.email }}'
        }
      }
    });

    // ğŸ” GÃ¨re les erreurs Stripe cÃ´tÃ© client (ex : carte refusÃ©e)
    if (error) {
      resultDiv.innerHTML = `
        <div class="alert alert-danger">
          âŒ Paiement refusÃ© : ${error.message}
        </div>
      `;
      console.warn('[Stripe error]', error); // Console dev

    } else if (paymentIntent.status === 'requires_capture') {
      // âœ… Paiement autorisÃ© (fonds bloquÃ©s, mais non capturÃ©s)
      resultDiv.innerHTML = `
        <div class="alert alert-success">
          âœ… Paiement autorisÃ© avec succÃ¨s. Redirection...
        </div>
      `;

      // ğŸ” Redirection vers page de confirmation
      setTimeout(() => {
        window.location.href = '{{ path("paiement_confirmation", { id: reservation.id }) }}';
      }, 1500);
    } else {
      // ğŸŸ¡ Statut inattendu (rare mais utile pour debug)
      resultDiv.innerHTML = `
        <div class="alert alert-warning">
          âš ï¸ Paiement en statut inattendu : ${paymentIntent.status}
        </div>
      `;
    }
  });
</script>
{% endblock %}
