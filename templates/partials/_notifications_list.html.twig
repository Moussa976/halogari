{% if notifications is empty %}
	<li>
		<span class="dropdown-item small text-muted text-center">Aucune nouvelle notification</span>
	</li>
{% else %}
	{% for notif in notifications %}
		<li>
			<a class="dropdown-item small text-wrap d-flex align-items-start" href="{{ path('notification_voir', { id: notif.id }) }}">
				{% if notif.type == 'message' %}
					<i class="bi bi-envelope-fill me-2 text-primary"></i>
				{% elseif notif.type == 'reservation' %}
					<i class="bi bi-calendar-check-fill me-2 text-success"></i>
				{% elseif notif.type == 'annulation' %}
					<i class="bi bi-x-circle-fill me-2 text-danger"></i>
				{% elseif notif.type == 'paiement' %}
					<i class="bi bi-credit-card-2-front-fill me-2 text-warning"></i>
				{% else %}
					<i class="bi bi-info-circle me-2 text-muted"></i>
				{% endif %}
				<div>
					<strong>{{ notif.titre }}</strong><br>
					<small>{{ notif.createdAt|date_conversation }}</small>
				</div>
			</a>
		</li>
	{% endfor %}
{% endif %}

<li><hr class="dropdown-divider"></li>
<li>
	<a class="dropdown-item bg-orange rounded text-center small" href="{{ path('app_notifications') }}">
		Voir toutes les notifications
	</a>
</li>
