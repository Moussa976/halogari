{% extends 'base.html.twig' %}

{% block title %}HaloGari | Réinitialiser le mot de passe{% endblock %}

{% block body %}
	<div class="container py-5">
		<div class="row justify-content-center">
			<div class="col-md-6">
				<h1 class="mb-4 text-center">Réinitialiser le mot de passe</h1>

				{{ form_start(resetForm, { attr: { class: 'bg-light p-4 rounded shadow-sm border' } }) }}

					<div class="mb-3">
						{{ form_label(resetForm.plainPassword, 'Nouveau mot de passe :', {'label_attr': {'class': 'form-label'}}) }}
						{{ form_widget(resetForm.plainPassword, {'attr': {'class': 'form-control', 'placeholder': '***************'}}) }}
						{{ form_errors(resetForm.plainPassword) }}
					</div>

					<div class="text-center">
						<button type="submit" class="btn btn-orange">Réinitialiser le mot de passe</button>
					</div>

				{{ form_end(resetForm) }}
			</div>
		</div>
	</div>
{% endblock %}
